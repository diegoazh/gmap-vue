{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.type.ts",
    "src/**/*.interface.ts"
  ],
  "exclude": ["src/tests/**/*", "src/cypress/**/*"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["google.maps", "node"],
    "outDir": "dist/types",
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitThis": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
